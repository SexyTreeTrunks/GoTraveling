<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:gravity="center"
    android:weightSum="1">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src ="@drawable/baby"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">

        <TextView
            android:id="@+id/titleText3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/titleText1"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/titleText2"
            android:layout_toRightOf="@+id/titleText2"
            android:text="KIDS"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="33dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleText2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/titleText1"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/titleText1"
            android:layout_marginBottom="12dp"
            android:text="OF THE"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleText1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="GUARDIANS"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="33dp"
            android:textStyle="bold"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp"
            android:layout_above="@+id/titleText2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:inputType="text"
        android:background="@android:color/background_light"
        android:hint="  Email" />

    <Space android:layout_width="match_parent" android:layout_height="10dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/emailInput"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:inputType="textPassword"
        android:background="@android:color/background_light"
        android:hint="  Password" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_below="@+id/passwordInput"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/signupButton"
        android:background="@android:color/background_light"
        android:text="Log in"
        android:textAllCaps="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_alignEnd="@+id/passwordInput"
        android:layout_alignTop="@+id/loginButton"
        android:background="@android:color/background_light"
        android:text="Sign up"
        android:textAllCaps="false" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Remember login"
        android:textColor="@android:color/black" />

</LinearLayout>