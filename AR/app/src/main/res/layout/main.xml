<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background05">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="71dp"
            android:background="@android:color/background_light"
            android:src="@drawable/mother_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="최현아"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@android:color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="chicken@gmail.com"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/moving"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="아동 상태 : 도착 지연"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/gif_image"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center">

        <Button
            android:id="@+id/checkLocationOfKidButton"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:text="아동의 현재 위치 확인"
            android:textAllCaps="true" />

        <Space
            android:id="@+id/space"
            android:layout_width="15dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/CheckDesticationOfKidButton"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@android:color/holo_blue_light"
            android:text="아동의 목적지 확인"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>